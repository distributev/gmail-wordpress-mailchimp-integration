    xhr.responseType = "json";
    xhr.onload = function() {
      var status = xhr.status;
      console.log(xhr.response);
      console.log(status);

      if (status == 200) {
        callback(null, xhr.response);
      } else {
        callback(status);
      }
    };
    xhr.send();
};

